@model HealthApp.MVC.Areas.Doctors.ViewModels.ExceptionAvailabilityViewModel

@{
    ViewData["Title"] = "Add Availability Exception";
}

<div class="back-button-container">
    <a asp-area="Doctors" asp-controller="Availability" asp-action="Index" class="btn btn-secondary"><i class="fi fi-sr-angle-small-left"></i></a>
</div>

<div class="form-container">
    <h2>Add an Availability Exception</h2>

    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Create" method="post" class="exception-form">
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" type="date" />
            <span asp-validation-for="StartDate"></span>
        </div>

        <div class="form-group">
            <label asp-for="StartTime"></label>
            <input asp-for="StartTime" type="time" />
            <span asp-validation-for="StartTime"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndDate"></label>
            <input asp-for="EndDate" type="date" />
            <span asp-validation-for="EndDate"></span>
        </div>

        <div class="form-group">
            <label asp-for="EndTime"></label>
            <input asp-for="EndTime" type="time" />
            <span asp-validation-for="EndTime"></span>
        </div>

        <button type="submit" class="btn-submit">Add exception</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
