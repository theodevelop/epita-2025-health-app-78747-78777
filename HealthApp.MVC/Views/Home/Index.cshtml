<!-- Section Hero -->
<div class="hero-section">
    <div class="hero-content container">
        <h1>Welcome to Hospital Plus</h1>
        <p>Your solution for easily booking medical appointments online.</p>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a asp-area="Admin" asp-controller="Appointments" asp-action="Index" class="btn hero-btn">See appointments</a>
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole("Doctor"))
        {
            <a asp-area="Doctors" asp-controller="Appointments" asp-action="Index" class="btn hero-btn">See my appointments</a>
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole("Patient"))
        {
            <a asp-area="Patients" asp-controller="Appointments" asp-action="Book" class="btn hero-btn">Book an appointment</a>
        }
        else
        {
            <a asp-area="Identity" asp-page="/Account/Login" class="btn hero-btn">Make an appointment</a>
        }

    </div>
</div>

<!-- Section des fonctionnalités -->
<section class="features-section">
    <div class="container">
        <h2>Our services</h2>
        <div class="features">
            <div class="feature">
                <h3>Quick Appointment Booking</h3>
                <p>Book your consultations in just a few clicks.</p>
            </div>
            <div class="feature">
                <h3>Automatic notifications</h3>
                <p>Receive alerts so you never miss an appointment.</p>
            </div>
            <div class="feature">
                <h3>List of Qualified Doctors</h3>
                <p>Choose from a wide range of specialists.</p>
            </div>
        </div>
    </div>
</section>

<!-- Section CTA (Appel à l'action) -->
<section class="cta-section">
    <div class="container">
        <h2>Ready to get started?</h2>
        <p>Register now and book your first appointment.</p>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn cta-btn">Registration</a>
    </div>
</section>
