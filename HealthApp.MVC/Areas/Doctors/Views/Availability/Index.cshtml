@model HealthApp.MVC.Areas.Doctors.ViewModels.WeeklyAvailabilityViewModel

@{
    ViewData["Title"] = "Working Hours";
    Layout = "~/Areas/Doctors/Views/Shared/_Layout.cshtml";
    string[] dayNames = { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
    int startHour = Model.StartHour;
    int endHour = Model.EndHour;
}

<section class="dashboard">
    <h1>Working Hours</h1>

    <form method="post">
        <div class="availability-grid">
            <div class="row header">
                <div class="cell day-label"></div>
                @for (int d = 0; d < 7; d++)
                {
                    <div class="cell day-label">@dayNames[d]</div>
                }
            </div>

            @for (int hour = startHour; hour < endHour; hour++)
            {
                <div class="row">
                    <div class="cell hour-label">
                        @($"{hour}:00")
                    </div>
                    @for (int d = 0; d < 7; d++)
                    {
                        int colIndex = hour - startHour;

                        string checkboxId = $"chk_{d}_{colIndex}";
                        bool isChecked = Model.Availability[d][colIndex];
                        <div class="cell slot-container">
                            <input type="checkbox"
                                   hidden
                                   id="@checkboxId"
                                   name="Availability[@d][@colIndex]"
                                   value="true"
                            @(isChecked ? "checked" : "") />

                            <label for="@checkboxId" class="slot"></label>

                            <input type="hidden" name="Availability[@d][@colIndex]" value="false" />
                        </div>
                    }
                </div>
            }
        </div>

        <button type="submit" class="save-button">Save</button>
    </form>
</section>


@section TimetableException {
    <aside class="summary-panel">
        <h1>Availability Exceptions</h1>
        <a asp-area="Doctors" asp-controller="Availability" asp-action="Create" class="btn-create">
            Add
        </a>
        <table class="exception-table">
            <thead>
                <tr>
                    <th>From</th>
                    <th>To</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Exceptions != null && Model.Exceptions.Any())
                {
                    foreach (var exception in Model.Exceptions.OrderBy(e => e.StartDateTime))
                    {
                        <tr>
                            <td>
                                <div class="datetime-cell">
                                    <span class="date-part">@exception.StartDateTime.ToString("dd/MM/yyyy")</span>
                                    <span class="time-part">@exception.StartDateTime.ToString("HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                <div class="datetime-cell">
                                    <span class="date-part">@exception.EndDateTime.ToString("dd/MM/yyyy")</span>
                                    <span class="time-part">@exception.EndDateTime.ToString("HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <!-- Bouton Edit -->
                                    <a asp-area="Doctors" asp-controller="Availability"
                                       asp-action="Edit" asp-route-id="@exception.Id"
                                       class="btn btn-edit"
                                       title="Edit exception">
                                        <i class="fi fi-sr-pencil"></i>
                                    </a>

                                    <!-- Bouton Delete -->
                                    <form asp-area="Doctors" asp-controller="Availability"
                                          asp-action="Delete"
                                          method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this exception?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@exception.Id" />
                                        <button type="submit" class="btn btn-delete" title="Delete exception">
                                            <i class="fi fi-sr-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No exceptions</td>
                    </tr>
                }
            </tbody>
        </table>

    </aside>
}