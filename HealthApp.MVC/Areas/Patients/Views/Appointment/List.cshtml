@model List<HealthApp.MVC.Models.Domain.Appointment>
@{
    ViewBag.Title = "Mes Rendez-vous";
    string selectedStatus = ViewBag.FilterStatus as string;
}

<h2 class="mb-4">Mes Rendez-vous</h2>

<!-- Filtres -->
<form method="get" class="mb-4">
    <div class="form-inline">
        <label for="status" class="mr-2">Filtrer :</label>
        <select name="status" id="status" class="form-control" onchange="this.form.submit()">
            <option value="">Tous</option>

            @if (selectedStatus == "Pending")
            {
                <option value="Pending" selected>En attente</option>
            }
            else
            {
                <option value="Pending">En attente</option>
            }

            @if (selectedStatus == "Cancelled")
            {
                <option value="Cancelled" selected>Annulé</option>
            }
            else
            {
                <option value="Cancelled">Annulé</option>
            }

            @if (selectedStatus == "Completed")
            {
                <option value="Completed" selected>Complété</option>
            }
            else
            {
                <option value="Completed">Complété</option>
            }
        </select>
    </div>
</form>

<!-- Liste des rendez-vous -->
@if (!Model.Any())
{
    <div class="alert alert-info">Aucun rendez-vous trouvé.</div>
}
else
{
    <div class="row">
        @foreach (var appointment in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            @(appointment.Doctor != null
                                ? $"{appointment.Doctor.FirstName} {appointment.Doctor.LastName}"
                                : "Médecin inconnu")
                        </h5>
                        <p class="card-text">
                            <strong>Date :</strong> @appointment.Date.ToString("dd/MM/yyyy HH:mm")<br />
                            <strong>Statut :</strong> @appointment.Status
                        </p>
                        <a href="@Url.Action("Details", "Appointment", new { id = appointment.Id })" class="btn btn-primary">
                            Voir les détails
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

