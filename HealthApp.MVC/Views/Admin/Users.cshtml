@model IEnumerable<HealthApp.MVC.Models.Entities.ApplicationUser>
@{
    Layout = "_AdminLayout.cshtml";
}

<section>
    <h1>All Users</h1>
    <table class="table-users">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                // We'll retrieve roles in the next step
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <!-- We'll fill this with user roles soon -->
                    </td>
                    <td>
                        <!-- Placeholder for actions (edit, deactivate, etc.) -->
                        <a asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                        <a asp-action="DeactivateUser" asp-route-id="@user.Id">Deactivate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>