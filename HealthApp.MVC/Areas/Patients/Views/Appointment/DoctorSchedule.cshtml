@model HealthApp.MVC.Areas.Patients.Models.DoctorScheduleViewModel
@{
    ViewData["Title"] = "Planning de " + Model.Doctor.FirstName + " " + Model.Doctor.LastName;
}

<div class="container mt-5 text-center">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h5 class="mb-0">Créneaux disponibles</h5>
        </div>
        <div class="card-body text-left">
            @if (Model.AvailableSlots.Any())
            {
                <ul class="list-group">
                    @foreach (var slot in Model.AvailableSlots)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @slot.ToString("g")
                            <a asp-action="FinalizeBooking"
                               asp-route-doctorId="@Model.Doctor.Id"
                               asp-route-selectedDate="@slot.ToString("yyyy-MM-ddTHH:mm:ss")"
                               class="btn btn-success btn-sm">
                                Réserver ce créneau
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-center">Aucun créneau disponible.</p>
            }
        </div>
    </div>
</div>
