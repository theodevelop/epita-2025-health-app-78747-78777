@model HealthApp.MVC.ViewModels.Admin.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="mb-4">
    <h1 class="fw-bold">Dashboard Administrateur</h1>
    <p class="text-muted">Bienvenue sur votre tableau de bord, Admin !</p>
</div>

<!-- Cartes de statistiques principales -->
<div class="row g-4">
    <!-- Patients -->
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-friends fa-2x text-primary"></i>
                </div>
                <h5 class="card-title">Patients</h5>
                <p class="fs-4 fw-bold">@Model.TotalPatients</p>
            </div>
        </div>
    </div>

    <!-- Médecins -->
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-md fa-2x text-success"></i>
                </div>
                <h5 class="card-title">Médecins</h5>
                <p class="fs-4 fw-bold">@Model.TotalDoctors</p>
            </div>
        </div>
    </div>

    <!-- Rendez-vous -->
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-calendar-check fa-2x text-warning"></i>
                </div>
                <h5 class="card-title">Rendez-vous</h5>
                <p class="fs-4 fw-bold">@Model.TotalAppointments</p>
            </div>
        </div>
    </div>

    <!-- Notifications -->
    <div class="col-lg-3 col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-bell fa-2x text-danger"></i>
                </div>
                <h5 class="card-title">Notifications</h5>
                <p class="fs-4 fw-bold">@Model.Notifications.Count</p>
            </div>
        </div>
    </div>
</div>

<!-- Détails des rendez-vous -->
<div class="mt-5">
    <h4 class="mb-3">Détails des rendez-vous</h4>
    <div class="row g-3">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">En attente</h6>
                    <p class="fs-5 fw-bold">@Model.PendingAppointments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Approuvés</h6>
                    <p class="fs-5 fw-bold">@Model.ApprovedAppointments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Annulés</h6>
                    <p class="fs-5 fw-bold">@Model.CancelledAppointments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center">
                <div class="card-body">
                    <h6 class="text-muted">Terminés</h6>
                    <p class="fs-5 fw-bold">@Model.CompletedAppointments</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dernières notifications -->
<div class="mt-5">
    <h4 class="mb-3">Dernières notifications</h4>
    <div class="table-responsive">
        <table class="table align-middle table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Contenu</th>
                    <th scope="col">Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var notification in Model.Notifications)
                {
                    <tr>
                        <td>@notification.Title</td>
                        <td>@notification.Content</td>
                        <td>@notification.DateSent.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>